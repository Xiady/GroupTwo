<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/head_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/callBackIm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:background="@drawable/head_back_black"
            android:text="返回"
            android:textColor="#FFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="添加地址"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="5.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="收货人："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_address_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5.0dip"
                android:layout_marginRight="20dp"
                android:hint="(必写)"
                android:singleLine="true"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_address_phonenumber_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5.0dip"
                android:layout_marginRight="20dp"
                android:hint="(必写)"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="固定电话："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_address_fixedtel_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5.0dip"
                android:layout_marginRight="20dp"
                android:hint="(必写)"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="省/市："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_address_provinceid_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5.0dip"
                android:hint="(省必写)"
                android:singleLine="true"
                android:textSize="15.0sp" />
            
            <EditText
                android:id="@+id/add_address_cityid_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5.0dip"
                android:layout_marginRight="20dp"
                android:hint="(市必写)"
                android:singleLine="true"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="详细地址："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_address_detail_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5.0dip"
                android:layout_marginRight="20dp"
                android:hint="(必写)"
                android:singleLine="true"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="邮编："
                android:textSize="18dp" />

            <EditText
                android:id="@+id/add_address_zipcode_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5.0dip"
                android:layout_marginRight="20dp"
                android:hint="(必写)"
                android:singleLine="true"
                android:textSize="15.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/save_address_button"
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:clickable="true"
                android:gravity="center"
                android:text="保存"
                android:textSize="18dp" />

            <Button
                android:id="@+id/cancel_address_button"
                android:layout_width="120.0dip"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dip"
                android:clickable="true"
                android:gravity="center"
                android:text="取消"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>