<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f00"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cart_fapiao_payjie"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/but_search"
            android:text="结算中心"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="填写发票信息"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cart_pay_add"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/head_button_normal"
            android:text="添加"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="发票抬头人"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <LinearLayout
            android:id="@+id/paytype_radio_person_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="个人"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/paytype_radio_person"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/paytype_radio_team_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
             >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:text="单位"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/paytype_radio_team"
               android:layout_width="15dp"
                android:layout_height="20dp"
                android:button="@null" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="发票内容"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <LinearLayout
            android:id="@+id/paytype_radio_book_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="图书"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/paytype_radio_book"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paytype_radio_voice_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="音响"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/paytype_radio_voice"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paytype_radio_game_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="游戏"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/paytype_radio_game"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paytype_radio_ruanjian_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="软件"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/paytype_radio_ruanjian"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:button="@null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paytype_radio_ziliao_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="资料"
                android:textColor="#333333"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/paytype_radio_ziliao"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:button="@null" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>